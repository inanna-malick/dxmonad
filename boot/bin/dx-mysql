#!/bin/bash

PATH=/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/bin

if [ "$1" == "r" ]; then
  docker stop dx-mysql || true
  docker kill dx-mysql || true
  docker rm   dx-mysql || true
fi

docker run -d \
  --name dx-mysql \
  --env MYSQL_ROOT_PASSWORD='root' \
  --env MYSQL_USER='root' \
  --env MYSQL_PASSWORD='' \
   mysql

